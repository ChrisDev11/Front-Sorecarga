{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { ref } from 'vue';\nimport axios from 'axios';\nimport Swal from 'sweetalert2';\nimport Cookies from 'js-cookie';\nexport default {\n  name: \"Login\",\n  setup() {\n    const credentials = ref({\n      email: '',\n      password: ''\n    });\n    const showStorageNotice = ref(false);\n    let authToken = '';\n    const login = async () => {\n      if (!validateForm()) {\n        return;\n      }\n      try {\n        const response = await axios.post('https://localhost:3000/Users/Login', credentials.value, {\n          headers: {\n            'Content-Type': 'application/json'\n          }\n        });\n        authToken = response.data.token;\n        showStorageNotice.value = true;\n      } catch (error) {\n        console.error('Erro ao fazer login:', error);\n        Swal.fire(\"Falha no login. Por favor, verifique suas credenciais.\");\n      }\n    };\n    const validateForm = () => {\n      if (!credentials.value.email || !credentials.value.password) {\n        Swal.fire(\"Por favor, preencha todos os campos.\");\n        return false;\n      }\n      return true;\n    };\n    const acceptStorage = () => {\n      if (authToken) {\n        Cookies.set('authToken', authToken, {\n          expires: 1\n        }); // Exemplo de expiração em 7 dias\n        showStorageNotice.value = false;\n        this.$router.push('/dashboard'); // Certifique-se de que o roteador Vue está configurado\n      }\n    };\n\n    const declineStorage = () => {\n      showStorageNotice.value = false;\n    };\n    return {\n      credentials,\n      showStorageNotice,\n      login,\n      acceptStorage,\n      declineStorage\n    };\n  }\n};","map":{"version":3,"names":["ref","axios","Swal","Cookies","name","setup","credentials","email","password","showStorageNotice","authToken","login","validateForm","response","post","value","headers","data","token","error","console","fire","acceptStorage","set","expires","$router","push","declineStorage"],"sources":["C:\\Users\\11\\Desktop\\frontend\\src\\components\\Login.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <form @submit.prevent=\"login\">\r\n      <label for=\"email\">Email:</label>\r\n      <input type=\"email\" v-model=\"credentials.email\" required>\r\n\r\n      <label for=\"password\">Senha:</label>\r\n      <input type=\"password\" v-model=\"credentials.password\" required>\r\n\r\n      <button type=\"submit\">Entrar</button>\r\n    </form>\r\n\r\n    <div v-if=\"showStorageNotice\" class=\"modal\">\r\n      <div class=\"modal-content\">\r\n        <p>Esta aplicação deseja armazenar um token de autenticação no seu navegador. Você aceita?</p>\r\n        <button @click=\"acceptStorage\">Aceitar</button>\r\n        <button @click=\"declineStorage\">Recusar</button>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { ref } from 'vue';\r\nimport axios from 'axios';\r\nimport Swal from 'sweetalert2';\r\nimport Cookies from 'js-cookie';\r\n\r\nexport default {\r\n  name: \"Login\",\r\n  setup() {\r\n    const credentials = ref({\r\n      email: '',\r\n      password: '',\r\n    });\r\n\r\n    const showStorageNotice = ref(false);\r\n    let authToken = '';\r\n\r\n    const login = async () => {\r\n      if (!validateForm()) {\r\n        return;\r\n      }\r\n\r\n      try {\r\n        const response = await axios.post('https://localhost:3000/Users/Login', credentials.value, {\r\n          headers: {\r\n            'Content-Type': 'application/json',\r\n          },\r\n        });\r\n\r\n        authToken = response.data.token;\r\n        showStorageNotice.value = true;\r\n      } catch (error) {\r\n        console.error('Erro ao fazer login:', error);\r\n        Swal.fire(\"Falha no login. Por favor, verifique suas credenciais.\");\r\n      }\r\n    };\r\n\r\n    const validateForm = () => {\r\n      if (!credentials.value.email || !credentials.value.password) {\r\n        Swal.fire(\"Por favor, preencha todos os campos.\");\r\n        return false;\r\n      }\r\n      return true;\r\n    };\r\n\r\n    const acceptStorage = () => {\r\n      if (authToken) {\r\n        Cookies.set('authToken', authToken, { expires: 1 }); // Exemplo de expiração em 7 dias\r\n        showStorageNotice.value = false;\r\n        this.$router.push('/dashboard'); // Certifique-se de que o roteador Vue está configurado\r\n      }\r\n    };\r\n\r\n    const declineStorage = () => {\r\n      showStorageNotice.value = false;\r\n    };\r\n\r\n    return {\r\n      credentials,\r\n      showStorageNotice,\r\n      login,\r\n      acceptStorage,\r\n      declineStorage,\r\n    };\r\n  },\r\n};\r\n</script>\r\n\r\n\r\n<style scoped>\r\n.container{\r\n    max-width: 360px;\r\n    }\r\n\r\n</style>"],"mappings":";AAuBA,SAASA,GAAE,QAAS,KAAK;AACzB,OAAOC,KAAI,MAAO,OAAO;AACzB,OAAOC,IAAG,MAAO,aAAa;AAC9B,OAAOC,OAAM,MAAO,WAAW;AAE/B,eAAe;EACbC,IAAI,EAAE,OAAO;EACbC,KAAKA,CAAA,EAAG;IACN,MAAMC,WAAU,GAAIN,GAAG,CAAC;MACtBO,KAAK,EAAE,EAAE;MACTC,QAAQ,EAAE;IACZ,CAAC,CAAC;IAEF,MAAMC,iBAAgB,GAAIT,GAAG,CAAC,KAAK,CAAC;IACpC,IAAIU,SAAQ,GAAI,EAAE;IAElB,MAAMC,KAAI,GAAI,MAAAA,CAAA,KAAY;MACxB,IAAI,CAACC,YAAY,CAAC,CAAC,EAAE;QACnB;MACF;MAEA,IAAI;QACF,MAAMC,QAAO,GAAI,MAAMZ,KAAK,CAACa,IAAI,CAAC,oCAAoC,EAAER,WAAW,CAACS,KAAK,EAAE;UACzFC,OAAO,EAAE;YACP,cAAc,EAAE;UAClB;QACF,CAAC,CAAC;QAEFN,SAAQ,GAAIG,QAAQ,CAACI,IAAI,CAACC,KAAK;QAC/BT,iBAAiB,CAACM,KAAI,GAAI,IAAI;MAChC,EAAE,OAAOI,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAAC,sBAAsB,EAAEA,KAAK,CAAC;QAC5CjB,IAAI,CAACmB,IAAI,CAAC,wDAAwD,CAAC;MACrE;IACF,CAAC;IAED,MAAMT,YAAW,GAAIA,CAAA,KAAM;MACzB,IAAI,CAACN,WAAW,CAACS,KAAK,CAACR,KAAI,IAAK,CAACD,WAAW,CAACS,KAAK,CAACP,QAAQ,EAAE;QAC3DN,IAAI,CAACmB,IAAI,CAAC,sCAAsC,CAAC;QACjD,OAAO,KAAK;MACd;MACA,OAAO,IAAI;IACb,CAAC;IAED,MAAMC,aAAY,GAAIA,CAAA,KAAM;MAC1B,IAAIZ,SAAS,EAAE;QACbP,OAAO,CAACoB,GAAG,CAAC,WAAW,EAAEb,SAAS,EAAE;UAAEc,OAAO,EAAE;QAAE,CAAC,CAAC,EAAE;QACrDf,iBAAiB,CAACM,KAAI,GAAI,KAAK;QAC/B,IAAI,CAACU,OAAO,CAACC,IAAI,CAAC,YAAY,CAAC,